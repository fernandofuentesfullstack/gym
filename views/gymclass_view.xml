<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- VISTA FORM -->
		<record model="ir.ui.view" id="gym_gymclass_form">
			<field name="name">Classes</field>
			<field name="model">gym.gymclass</field>
			<field name="arch" type="xml">
				<form string="Formulario de clases">
					<group string="Classes">
						<field name="name" />
						<field name="start" />
						<field name="end" />
						<field name="capacity" />
						<field name="activityType" />
					</group>
				</form>
			</field>
		</record>
		
		<!-- VISTA TREE -->
		<record model="ir.ui.view" id="gym_gymclass_tree">
			<field name="name">Classes</field>
			<field name="model">gym.gymclass</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="start" />
					<field name="end" />
					<field name="capacity" />
					<field name="activityType" />
				</tree>
			</field>
		</record>
		
		<record id="act_gymclass" model="ir.actions.act_window">
			<field name="name">Clases</field>
			<field name="res_model">gym.gymclass</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem id="gym" name="Gimnasio" action="act_gymclass" />
		<menuitem name="Clases" id="gymclasses_submenu" parent="gym"
			sequence="100" />
		<menuitem name="Ver clases" id="gymclasses_submenu_2"
			parent="gymclasses_submenu" sequence="100" action="act_gymclass" />
	</data>
</odoo>