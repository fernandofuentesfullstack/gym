<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<!-- VISTA FORM -->
		<record model="ir.ui.view" id="gym_gymuser_form">
			<field name="name">Usuarios</field>
			<field name="model">gym.gymuser</field>
			<field name="arch" type="xml">
				<form string="Formulario de Usuario">
					<group string="Users">
						<field name="name" />
						<field name="idcard" />
						<field name="photo" />
					</group>
				</form>
			</field>
		</record>
		
		<!-- VISTA TREE -->
		<record model="ir.ui.view" id="gym_gymuser_tree">
			<field name="name">Usuarios</field>
			<field name="model">gym.gymuser</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="idcard" />
					<field name="photo" />
				</tree>
			</field>
		</record>
		
		<record id="act_gymuser" model="ir.actions.act_window">
			<field name="name">Usuarios</field>
			<field name="res_model">gym.gymuser</field>
			<field name="view_mode">tree,form</field>
		</record>
		
		<menuitem id="gym" name="Usuarios" action="act_gymuser" />
		
		<menuitem name="Clases" id="gymuser_submenu" parent="gym"
			sequence="100" />
			
		<menuitem name="Ver usuarios" id="gymuser_submenu_2"
			parent="gymuser_submenu" sequence="100" action="act_gymuser" />
			
	</data>
</odoo>
